<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.apsfl.activities.ForgotPasswordActivity">

    <include
        android:id="@+id/toolBar"
        layout="@layout/layout_toolbar"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text="Please Enter User Name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/lmoUserName"
        style="@style/customEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="User Name"
        android:inputType="textPersonName"
        android:maxLength="12" />



    <Button
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:background="@color/loginButtonColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lmoUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/forget_password_submit" />

</LinearLayout>
