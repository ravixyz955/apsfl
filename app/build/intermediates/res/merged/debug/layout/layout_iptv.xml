    <TextView
        style="@style/customTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iptv_serial_number_text" />

    <EditText
        android:id="@+id/formIPTVSerialNoEditText"
        style="@style/customEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/iptv_serial_number_hint"
        android:imeOptions="actionNext"
        android:inputType="text|textVisiblePassword"
        android:maxLength="20" />

    <TextView
        style="@style/customTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iptv_box_mac_id_text" />

    <EditText
        android:id="@+id/formIPTVMacAddressEditText"
        style="@style/customEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/iptv_box_mac_id_hint"
        android:imeOptions="actionDone"
        android:inputType="text|textVisiblePassword"
        android:maxLength="17" />
    <TextView
        android:id="@+id/formIPTVSpinnerHeader"
        style="@style/customTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IPTV model" />

    <Spinner
        android:clickable="false"
        android:id="@+id/cpeSTBModelSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/spinner_bg" />

