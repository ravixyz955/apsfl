    <LinearLayout
        android:id="@+id/formIfSTBLeaseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            style="@style/customTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cpe_stb_if_lease_text" />

        <EditText
            android:id="@+id/iptvEmiCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            style="@style/customEditTextStyle"
            android:enabled="false"
            android:hint="No Of IPTV Box EMI"
            android:inputType="number|textVisiblePassword" />

        <TextView
            style="@style/customTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iptv_installments_text" />

        <EditText
            android:id="@+id/iptvBoxEmiprice"
            style="@style/customEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/cpe_installments_hint"
            android:inputType="number|textVisiblePassword" />

        <TextView
            style="@style/customTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cpe_stb_price_rental_text" />

        <EditText
            android:id="@+id/iptvBoxUpfrontPrice"
            style="@style/customEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/cpe_stb_price_rental_hint"
            android:inputType="number|textVisiblePassword" />
    </LinearLayout>



    <TextView
        android:id="@+id/iptvPackageHeader"
        style="@style/customTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IPTV Box Package*" />

    <TextView
        android:id="@+id/iptvPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:layout_marginLeft="5dp"
        android:text="--Select--"
        android:background="@mipmap/spinner_bg" />
</LinearLayout>
