<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/edtFCount"
        android:inputType="number"
        android:visibility="invisible"
        android:hint="FCount"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Ftype"
        android:layout_below="@+id/edtFCount"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Format"
        android:layout_below="@+id/Ftype"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FingerPos"
        android:layout_below="@+id/Format"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTimeout"
        android:inputType="number"
        android:layout_below="@+id/FingerPos"
        android:visibility="invisible"
        android:hint="Time Out"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:layout_marginTop="20dp"
        android:id="@+id/btnCapture"

        android:onClick="CaptureFinger"/>
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UI not Required"
        android:layout_below="@+id/edtLockKey"
        android:visibility="invisible"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtLockKey"
        android:hint="Locking Key"
        android:visibility="invisible"
        android:layout_below="@+id/edtTimeout"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/txtResult"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnCapture"/>

</RelativeLayout>
