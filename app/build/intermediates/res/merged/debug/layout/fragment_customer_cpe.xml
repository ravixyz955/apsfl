<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/previousNextLayout"
        layout="@layout/layout_previous_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/previousNextLayout"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pop_name_text" />

            <TextView
                android:id="@+id/selectedPOPName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:gravity="center|start"
                android:paddingBottom="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/oltIDSpinnerHeader"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/olt_id_text" />

            <Spinner
                android:id="@+id/oltIDSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/spinner_bg" />

            <TextView
                android:id="@+id/oltPortHeader"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/olt_port_id_text" />

            <Spinner
                android:id="@+id/oltPortIDSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/spinner_bg" />


            <TextView
                android:id="@+id/oltPortLevel1Header"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/olt_port_level1_text" />

            <Spinner
                android:id="@+id/oltPortLevel1Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/spinner_bg" />


            <TextView
                android:id="@+id/oltPortLevel2Header"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/olt_port_level2_text" />

            <Spinner
                android:id="@+id/oltPortLevel2Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/spinner_bg" />


            <TextView
                android:id="@+id/oltPortLevel3Header"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/olt_port_level3_text" />

            <Spinner
                android:id="@+id/oltPortLevel3Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/spinner_bg" />



            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cpe_serial_number_text" />

            <EditText
                android:id="@+id/formONUID"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/device_id_text_hint"
                android:imeOptions="actionNext"
                android:inputType="text|textVisiblePassword"
                android:maxLength="20" />

            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cpe_onu_mac_address_text" />

            <EditText
                android:id="@+id/formCPEMacAddress"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cpe_stb_mac_address_hint"
                android:imeOptions="actionNext"
                android:inputType="text|textVisiblePassword"
                android:maxLength="17" />
            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cpe_model_text" />

            <Spinner
                android:clickable="false"
                android:id="@+id/cpeModelSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/spinner_bg" />
