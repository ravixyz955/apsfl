            <LinearLayout
                android:id="@+id/formIfCPELeaseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cpe_if_lease_text" />

                <EditText
                    android:id="@+id/emiCountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    style="@style/customEditTextStyle"
                    android:enabled="false"
                    android:inputType="number|textVisiblePassword"
                    android:hint="No Of ONU EMI"/>

                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cpe_installments_text" />

                <EditText
                    android:id="@+id/formONUemiAmountEditText"
                    style="@style/customEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/cpe_installments_hint"
                    android:inputType="number|textVisiblePassword" />

                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cpe_price_rental_text" />

                <EditText
                    android:id="@+id/formCPEUpFrontChargesEditText"
                    style="@style/customEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/cpe_price_rental_hint"
                    android:inputType="number|textVisiblePassword" />

            </LinearLayout>

            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cpe_installation_text" />

            <EditText
                android:id="@+id/formCPEInstallationEditText"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/cpe_installation_hint"
                android:inputType="number|textVisiblePassword" />
            <!--<TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cpe_extra_cable_charge_text" />

            <EditText
                android:id="@+id/formCPECableChargeEditText"
                style="@style/customEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cpe_extra_cable_charge_hint"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal|textVisiblePassword"
                android:maxLength="10" />-->
        <LinearLayout
            android:id="@+id/formtelephonicLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="1">

        <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No of Telephone Connections*" />

            <Spinner
                android:id="@+id/telephonicConnCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/spinner_bg" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/formVpnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView"
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VPN Service Name*" />

                <Spinner
                    android:id="@+id/vpnServiceSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/spinner_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/formSTBLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="visible">
                <TextView
                    android:visibility="gone"
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No of Iptv Connections*" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/iptvConnCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/spinner_bg" />
                <LinearLayout
                    android:id="@+id/stbWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/add_iptv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:tag="new"
                        android:textColor="@color/next_screen_text_color"
                        android:background="@drawable/next_layout_bg"
                        android:text="Add IPTV" />

                    <Button
                        android:id="@+id/remove_iptv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:tag="delete"
                        android:textColor="@color/next_screen_text_color"
                        android:background="@drawable/next_layout_bg"
                        android:text="Remove IPTV" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>