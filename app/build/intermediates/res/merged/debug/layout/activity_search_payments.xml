<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".activities.SearchPaymentsActivity">

    <include layout="@layout/layout_toolbar" />

    <TextView
        style="@style/customTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:text="@string/search_mobile_heading_text" />

    <LinearLayout
        android:id="@+id/formAadhaarNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/paymentsMobileEditText"
            style="@style/customEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:digits="0123456789"
            android:hint="@string/mobile_number_hint"
            android:imeOptions="actionSearch"
            android:inputType="phone"
            android:maxLength="10" />

        <Button
            android:id="@+id/searchPaymentButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.25"
            android:background="@drawable/custom_button_bg"
            android:text="@string/search_button_payment_text"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/paymentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noPaymentsMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_payments_message"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="normal"
        android:visibility="gone" />

</LinearLayout>
