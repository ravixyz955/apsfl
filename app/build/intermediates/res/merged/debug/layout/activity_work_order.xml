            <TextView
                android:id="@+id/feaseProducts"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textStyle="normal" />

            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fease_cpe_charges_text" />

            <TextView
                android:id="@+id/feaseCPECharges"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textStyle="normal" />

            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/fease_caf_text" />

            <TextView
                android:id="@+id/feaseCAFNo"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal" />

            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fease_aadhaar_text" />

            <TextView
                android:id="@+id/feaseAadhaarNo"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal" />

            <TextView
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fease_customer_first_name" />

            <TextView
                android:id="@+id/feaseCustomerFirstName"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/customerSurnameHeader"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fease_customer_last_name" />

            <TextView
                android:id="@+id/feaseCustomerLastName"
                style="@style/customTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal" />

