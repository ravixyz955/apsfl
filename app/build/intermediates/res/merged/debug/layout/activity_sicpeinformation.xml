    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/previousNextLayout"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Package Details" />

                <EditText
                    android:id="@+id/packages"
                    style="@style/customEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="number|textVisiblePassword" />

                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POP District" />

                <Spinner
                    android:id="@+id/popDistrictSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/spinner_bg" />

                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POP Mandal" />

                <TextView
                    android:id="@+id/popMandal"
                    android:text="Select to load mandal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center|start"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black" />


                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pop_name_text" />
                <TextView
                    android:id="@+id/selectedPOPName"
                    android:text="Select to load POP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center|start"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/oltIDSpinnerHeader"
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/olt_id_text" />

                <Spinner
                    android:id="@+id/oltIDSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/spinner_bg" />

                <TextView
                    android:id="@+id/oltPortHeader"
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/olt_port_id_text" />

                <Spinner
                    android:id="@+id/oltPortIDSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/spinner_bg" />




                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cpe_serial_number_text" />

                <EditText
                    android:id="@+id/formONUSerialNO"
                    style="@style/customEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/device_id_text_hint"
                    android:imeOptions="actionNext"
                    android:inputType="text|textVisiblePassword"
                    android:maxLength="20" />
