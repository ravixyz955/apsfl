            <LinearLayout
                android:id="@+id/formtelephonicLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    style="@style/customTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No of Telephone Connections*" />

                <Spinner
                    android:id="@+id/telephonicConnCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/spinner_bg" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/formVpnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/customTextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VPN Service Name*" />

                    <Spinner
                        android:id="@+id/vpnServiceSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/spinner_bg" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/formSTBLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/stbWrapper"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/add_iptv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:tag="new"
                            android:textColor="@color/next_screen_text_color"
                            android:background="@drawable/next_layout_bg"
                            android:text="Add IPTV" />

                        <Button
                            android:id="@+id/remove_iptv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:tag="delete"
                            android:textColor="@color/next_screen_text_color"
                            android:background="@drawable/next_layout_bg"
                            android:text="Remove IPTV" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:id="@+id/previousNextLayout"
        layout="@layout/layout_previous_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp" />
</RelativeLayout>